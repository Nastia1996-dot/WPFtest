<Window x:Class="WpfTest.KeyboardEvents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        Title="Keyboard Events Demo" Height="300" Width="500"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True"
        Background="#f0f0f0">

    <StackPanel Margin="20">
        <TextBlock FontSize="16" FontWeight="Bold" Text="Premi dei tasti sulla tastiera" Margin="0,0,0,10"/>

        <TextBlock x:Name="KeyDownOutput" Text="KeyDown: " Margin="0,5"/>
        <TextBlock x:Name="KeyUpOutput" Text="KeyUp: " Margin="0,5"/>
        <TextBlock x:Name="SaveOutput" Text="Clicca S+Ctrl per effettuare un salvataggio"></TextBlock>
        <TextBox x:Name="txtOutput" Margin="0,20,0,0" Height="30"  />

        <Button x:Name="btnInvio" Content="Pulisci" Click="btnInvio_Click" Width="50" Margin="20"></Button>
      
    </StackPanel>
</Window>
