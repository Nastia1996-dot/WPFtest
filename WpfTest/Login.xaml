    <Grid Margin="10" Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" ></ColumnDefinition>
            <ColumnDefinition Width="2*" ></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            

        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold" BorderBrush="Black">LOGIN</Label>
        <Label Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold"  BorderBrush="Black">REGISTRAZIONE</Label>

        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">Username:</Label>
        <TextBox x:Name="txtUser" Grid.Column="1" Grid.Row="1" Width="auto" Margin="3" ></TextBox>
        <Label Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Width="auto" >Nome:</Label>
        <TextBox Grid.Column="3" Grid.Row="1"  Width="auto" Margin="3"></TextBox>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Width="auto">Password:</Label>
        <PasswordBox Grid.Column="1" Grid.Row="2" Name="PasswordBox" Width="auto" Margin="3"></PasswordBox>
        <Label Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Width="auto">Email:</Label>
        <TextBox Grid.Column="3" Grid.Row="2" Width="auto" Margin="3"></TextBox>
        <Button Grid.Row="3" Grid.ColumnSpan="2" Background="Lavender" FontWeight="SemiBold" HorizontalAlignment="Center" Width="42" Margin="0,5,0,5" Padding="2" Content="Accedi" Click="Button_Click"/>
        <Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Background="Lavender" FontWeight="SemiBold" HorizontalAlignment="Center" Width="58" Margin="0,5,0,5" Padding="2" Content="Registrati"></Button>

        <CheckBox Grid.Column="0" Grid.Row="5" Content="Ricordami"></CheckBox>

